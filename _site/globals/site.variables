/*******************************
     User Global Variables
*******************************/

/*-------------------
       Fonts
--------------------*/
@importGoogleFonts: false;

@fontName: 'Baslek';
@fontNameEn: '@{fontName}En';
@fontNameAr: '@{fontName}Ar';

@headerFont: @fontNameEn, @fontNameAr, 'Helvetica Neue', Arial, Helvetica, sans-serif;
@pageFont: @fontNameEn, @fontNameAr, 'Helvetica Neue', Arial, Helvetica, sans-serif;

/*-------------------
      Base Sizes
--------------------*/
@emSize: 20px;
@fontSize: @emSize;

@emMobileSize: 16px;
@emTabletSize: 18px;

@yellow: #fdd700;
@black: #333;
@white: #fff;
@gray: #7c7c7c;

@primaryColor: @yellow;
@lightPrimaryColor: @lightYellow;
@textColor: @black;

/*--------------
  Page Heading
---------------*/

@h1: unit((53 / @fontSize), rem);
@h2: unit((30 / @fontSize), rem);
@h3: unit((30 / @fontSize), rem);
@h4: unit((15 / @fontSize), rem);
@h5: unit((@fontSize / @fontSize), rem);

@lineHeight: 1.9;
@mobileLineHeight: 1.5;
@tabletLineHeight: 1.75;
@headerLineHeight: 1.9;

/*--------------
   Form Input
---------------*/

/* This adjusts the default form input across all elements */
@inputVerticalPadding: @relative18px;


/*-------------------
    Derived Values
--------------------*/

@headerBottomMargin: 2.5rem;


@absoluteBorderRadius: @5px;